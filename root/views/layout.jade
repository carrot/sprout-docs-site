doctype html
html
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name='description', content='Simple project templating and skeletons')
    meta(name='author', content="Carrot Creative")
    meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1')
    title <%= S(name).titleize().value() %>
    
    //- likely needs diff typekit ID
    script(src="//use.typekit.net/ydj7swv.js")
    script.
      try{Typekit.load();}catch(e){}
    link(rel='stylesheet', href='http://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/styles/default.min.css')
    != css()
  body

    header
      h1 <%= S(name).titleize().value() %>
      h2  <%= S(description).decapitalize().value() %>

    .contain
      nav
        .logo-small: h2 <%= S(name).titleize().value() %>
        ul
          <% for(var i=0; i<menu_items.length; i++) { %>
          li(data-id='<%= S(menu_items[i]).slugify().value() %>'): a(href='#<%= S(menu_items[i]).slugify().value() %>') <%= S(name).titleize().value() %> 
          <% } %>
          
      main
        block content

  script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
  != js()
